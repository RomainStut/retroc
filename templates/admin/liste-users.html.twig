{% extends 'layout.html.twig' %}
{% block title %} Liste utilisateurs {% endblock%}
{% block titlepage %} Liste utilisateurs {% endblock%}

{% block content %}

    <div class="container-fluid">
        <div class="row">

            {% for user in users %}

                <div class="card col-3 mt-4 mr-3" style="width: 18rem;">
                    <div class="card-body">
                        {% if user.profilepicture%}
                            <img class="card-img-top" src="{{ asset('uploads/images/' ~  user.profilepicture) }}" alt="Card image cap">
                        {% endif %}
                        <h5 class="card-title">{{ user.username }}</h5><hr>
                        <p class="card-text">{{ user.email }}</p>


                        <a href="{{ path('update-user', {id: user.id })}}">Modifier le compte <i class="fas fa-cogs" style="color:#ffc107;"></i></a>
                        <hr>
                        <a href="{{ path('delete-user', {id: user.id })}}">Supprimer le compte <i class="fas fa-times" style="color:#ffc107;"></i></a>

                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}