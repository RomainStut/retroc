{% extends 'layout.html.twig' %}

{% block title %}Retroc{% endblock %}

{% block content %}

    <div class="container">
        <h1><b>Dernières annonces</b></h1>
        <div class="row">

            {% for product in products %}

                <div class="card col-3" style="width: 18rem;">
                    <div class="card-body">
                        {% if product.image%}
                            <img class="card-img-top" src="{{ asset('uploads/images/' ~ product.image) }}"
                                 alt="Card image cap">
                        {% endif %}
                        <h5 class="card-title">{{ product.name }}</h5><hr>
                        <p class="card-text">{{ product.price }} €</p>
                        <a href="{{ path('product', {id: product.id})}}">Voir</a>
                    </div>
                </div>

            {% endfor %}

        </div>
    </div>
    <div class="container mt-5">
        <h1><b>Derniers articles du blog Octocote</b></h1>
        <div class="row">

            {% for blog in blogs %}

                <div class="card col-4  " style="width: 18rem;">
                    <div class="card-body">
                        {% if blog.image%}
                            <img class="card-img-top" src="{{ asset('uploads/images/' ~ blog.image) }}" alt="Card image cap">
                        {% endif %}
                        <h5 class="card-title">{{ blog.title }}</h5><hr>
                        <p class="card-text" style="overflow:auto;">{{ blog.content  | striptags | slice(0, 150) }} </p>


                        <a href="{{ path('article-blog', {id: blog.id })}}">Voir</a>
                    </div>
                </div>


            {% endfor %}
            <a href="{{ path('show-all') }}" class="col-md-12 btn-md btn-secondary text-warning">Voir tous les articles</a>
        </div>
    </div>

{% endblock %}
