<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Contact{% endblock %}</title>
        {% block css %}
         <!-- Boostrap.css -->
         <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
         <!-- FontAwesome v5.x -->
         <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
        {% endblock %}
        {% block stylesheets %}{% endblock %}
        {% block titlepage %}<h1 style="text-align: center;">Nous contacter</h1>{% endblock %}
    </head>
    <body>        
        {% block body %}

        <form class="container">           
                <div class="form-group">
                    <h3><u>Nom</u> :</h3>
                    <input type="name" class="form-control" id="exampleInputEmail1" aria-describedby="nameHelp" placeholder="entrez votre nom">
                    <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                </div>
                <div class="form-group">
                    <h3><u>Prenom</u> :</h3>
                    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>               
                <button type="submit" class="btn btn-primary">Submit</button>            
        </form>
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>