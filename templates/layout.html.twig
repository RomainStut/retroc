<script>
    $(function() {

        $('.click-splitflap').splitFlap({
            image: '{{ asset('images/chars.png') }}',
            text:   '{{ "now"|date("d/m/Y")  }}',
            speed:          8,
            speedVariation: 2,
            autoplay:   true,
            onComplete: function () {
                console.log('Done !');
            }
        })

        $('a[href^="#"]').click(function(){
            var the_id = $(this).attr("href");$('html, body').animate({scrollTop:$(the_id).offset().top}, 'slow');//return false;
        });

        $('#searchBtn').on('click', function(e){

            e.preventDefault();

            if($('#searchQuery').val() !== ""){

                window:location.href = '/recherche/' + $('#searchQuery').val();
                var url = " {{ path('recherche-titre-home' , {search : 0}) }} ",
                    url = url.replace('0', $('#searchQuery').val())
                $.ajax({
                    type: 'GET',
                    url: url,
                    timeout: 3000,
                    dataType: 'html',
                    success: function() {
                        window:location.href = '/recherche/' + $('#searchQuery').val();
                    },
                    error: function (error) {
                        console.log(error.responseText);
                    }
                })
            }

        })

        $('.carousel').carousel({
            interval: 3500
        })
    });

</script>




