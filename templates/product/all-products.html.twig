{% extends 'layout.html.twig' %}

{% block title %}Liste des Annonces{% endblock %}

{% block content %}

    {% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="alert alert-{{ label }} mt-4 col-4">
            {{ message }}
        </div>
    {% endfor %}
    {% endfor %}


    <div class="container">
        <h1 class="text-center">Toutes nos annonces</h1>
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }} mt-4">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row">

            {% for product in products %}
                {% if product.isvalidate == 1 %}
                    <div class="card col-3" style="width: 18rem;">
                        <div class="card-body">
                            {% if product.image%}
                                <img class="card-img-top" src="{{ asset('uploads/images/' ~ product.image) }}" alt="Card image cap">
                            {% endif %}
                            <h5 class="card-title">{{ product.name }}</h5><hr>
                            <p class="card-text">{{ product.price }} â‚¬</p>


                            <a href="{{ path('product', {id: product.id })}}">Voir</a>
                        </div>
                    </div>

                {% endif %}
            {% endfor %}
        </div>
    </div>

{% endblock %}