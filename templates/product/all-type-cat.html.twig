{% extends 'layout.html.twig' %}

{% block title %}{{ type.name|capitalize }}{% endblock %}

{% block content %}

    <div class="container">
        <h1 class="text-center"> Liste des {{ categorie.name ~ ' ' ~ type.name|capitalize }}</h1>
        <div class="row">

            {% for product in products %}
                {% if product.isvalidate == 1 %}

                    <div class="card col-md-3 mb-4 listStyle antipadding" style="position: relative; height: 400px;">
                        <div class="card-body">
                            {% if product.image%}
                                <div style="height: 275px;">
                                    <img class="card-img-top" src="{{ asset('uploads/images/' ~ product.image) }}" alt="Card image cap">
                                </div>
                            {% endif %}
                            <div style="position: relative;">
                                <h5 class="card-title font-weight-bold text-warning">{{ product.name }}</h5>
                            </div>                            
                                <p class="card-text" style="color: white; font-size: 1.5rem">Prix: {{ product.price }} â‚¬</p>               
                            </div>
                                <a href="{{ path('product', {id: product.id })}}" class="navbarColor01 btn text-warning col-12 antipadding" style="position: absolute; bottom: 0;">Voir</a>
                            </div>                                    
                {% endif %}
            {% endfor %}
            </div>
        </div>
    

{% endblock %}