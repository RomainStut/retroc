{% extends 'layout.html.twig' %}

{% block title %}fiche-produit{% endblock %}

{% block titlepage %}{{ product.name }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-6">
                <div class="row">
                    <div class="col-12">
                        {% if product.image %}
                            <img src="{{ asset('uploads/images/' ~ product.image) }}"  alt=""><br>{#~ sert à effectuer une concaténation#}
                        {% endif %}
                    </div>
                    <div class="col-4">
                        Publié le: {{ product.datepost|date('d-m-Y') }}<br>
                        Etat: {{ product.quality.name }}<br>
                    </div>
                    <div class="col-6">
                        Prix: {{ product.price }} €
                    </div>
                    <div class="col-12">
                        <span><b>Annonce</b></span><br>
                        <p class="btn btn-secondary">{{ product.description }}</p>
                    </div>
                </div>
            </div>
            <div class="col-6">
                <h4> Vendeur: {{ product.user.username }}</h4>
                <a href="{{ path('product',{id:product.user.id }) }}" class="btn btn-info">Envoyer un message</a>
            </div>
        </div>
    </div>
    {# {{ dump(product) }} #}
{% endblock %}
