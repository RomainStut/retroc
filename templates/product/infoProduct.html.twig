{% extends 'layout.html.twig' %}
{% block css %}
<link rel="stylesheet" type="text/css" href="{{ asset('css/ficheproduit.css') }}">
{% endblock %}

{% block title %}fiche-produit{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center"> {{product.name}} </h1>
                <h5>Catégorie : {{product.categorie.name}} </h5>
                <h5>Qualité : 
                    {% if product.quality.name == "mib" %}
                        <i class="fas fa-star"></i>
                    {% elseif product.quality.name == "occase" %}
                        <i class="fas fa-star-half-alt"></i>
                    {% else %}
                        <i class="far fa-angry"></i>
                    {% endif %} 
                </h5>
                <h2 style="color: rgb(88, 184, 88)">{{product.price}} € </h2>
            </div>
            <div class="col-12 d-flex">
                <div class="col-md-8 text-center">
                    {% if product.image %}
                        <img src="{{ asset('uploads/images/' ~ product.image) }}" alt=" {{product.name}} " style="width:400px; height:400px" type="button" data-toggle="modal" data-target="#modalImage" class="btn btn-dark">
                    {% endif %}
                </div>
                <div class="col-md-4">
                    <div class="text-center description">
                        <h5>Description du produit :</h5>
                        <p> {{product.description}} </p>
                    </div>

            <div class="col-6">
                <h4> Vendeur: {{ product.user.username }}</h4>
                <div id="contactUser">
                    <button class="btn btn-info" id="contact">Contacter le vendeur</button>
                </div>
            </div>
        </div>
    </div>
    {# {{ dump(product) }} #}

    {# Div pour modal #}
    <div class="modal" id="modalImage" tabindex="-1" role="dialog" aria-labelledby="myModal">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">
                <img src="{{ asset('uploads/images/' ~ product.image) }}" alt=" {{product.name}} " style="max-width:1000px; max-height:600px">
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
    </div><!-- /.modal -->

{% endblock %}

	{% block js %}
        <script>
            $(function(){
                $('#contact').on('click', function(e){
                    event.preventDefault();
                    $('#contactUser').empty();
                    $('#contactUser').append('<form method="post">'+'<input id="send" class="form-control" type="textarea">'+'<button class="btn btn-primary mt-4">Envoyer message</button>'+'</form>')

                })

                $('body').on('click', '#send', function(e){
                    e.preventDefault();

                    $.ajax({
                        type: 'post',
                        url: "{{ path('user-message') }}",
                        data: ,
                        timeout: 3000,
                        dataType: 'json',
                        success: function (data) {
                            $('#contactUser').empty();
                            $('#contactUser').append('<span>Message envoyé!</span')
                        }
                    })
                })

            })
        </script>
    {% endblock %}

