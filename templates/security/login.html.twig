{% extends 'layout.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block titlepage %}Connexion{% endblock%}

{% block content %}
    <div class="container">
        <div class="col-6">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }}">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% if error %}
                <div>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
        </div>
        <div class="row justify-content-center">
            <div class="col-6 text-warning p-3 formStyle" >
                {# le formulaire de login #}
                <form action="{{ path('login') }}" method="post" class="login">
                    <div class="form-group">
                        <label for="username">Username : </label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="password">Mot de passe : </label>
                        <input type="password" id="password" name="_password" class="form-control">
                        <a href="" style="text-decoration: none"><small id="emailHelp" class="form-text text-warning">Mot de passe oubli√©</small></a>

                    </div>
                    <div class="row">
                        <button type="submit" class="btn btn-warning text-dark col-md-3 offset-2">Connexion</button>
                        <a href="{{ path('register') }}" class="btn btn-warning text-dark col-md-3 offset-2">Inscription</a>

                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
