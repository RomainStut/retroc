{% extends 'layout.html.twig' %}
{% block title %}Récupération de mot de passe{% endblock %}
{% block titlepage %}Récupération de mot de passe<br><br>{% endblock %}

{% block content %}


    <div class="container ">
        <div class="row">
            <div class="col-12 col-md-8" style="margin-left:200px;">

                {{ form_start(form) }}

                {{ form_end(form) }}

                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} mt-4">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

            </div>
        </div>
    </div>
{% endblock %}