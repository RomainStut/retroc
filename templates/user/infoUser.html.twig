{% extends 'layout.html.twig' %}

{% block title %}Profil utilisateur{% endblock %}
{% block titlepage %} <h1 class="ml-3" style="text-align: center; margin-bottom: 10px;">Profil de {{ user.username }}</h1>{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-2">
            <button class="btn btn-dark mt-1 text-warning" href="{{ path('update-user',{id:user.id }) }}">Modifier Profil</button>
            <button class="btn btn-dark mt-1 text-warning" id="v-pills-home-tab" data-toggle="pill" href="#v-pills-home" role="tab" aria-controls="v-pills-home" aria-selected="true">Mes annonces</button>
            <button class="btn btn-dark mt-1 text-warning" id="v-pills-profile-tab" data-toggle="pill" href="#v-pills-profile" role="tab" aria-controls="v-pills-profile" aria-selected="false">Mes messages</button>

        </div>
        <div class="col-6 offset-3">
            <div class="row">
                <div class="col-2 mr-5" >
                    <div class="row">
                        <div class="col-12" >
                            {% if user.profilepicture %}
                                <img src="{{ 'uploads/images/' ~ user.profilepicture }}" type="button" data-toggle="modal" data-target="#modalImage" class="btn btn-dark mr-5" style="height: 150px; width: 150px" alt=""><br>
                            {% else %}
                                <img src="{{ asset('images/yoda.jpeg' ) }}" alt="  " style=" " type="button" data-toggle="modal" data-target="#modalImage" class="btn btn-dark mr-5">
                            {% endif %}
                        </div>

                    </div>
                </div>
                <div class="col-8 ml-5">
                    <b> Pseudo: </b>{{ user.username }}<br>
                    <b> Email: </b>{{ user.email }}<br>
                    <b>Tel: </b>{{ user.tel }}<br>
                    <b> Date de naissance: </b>{{ user.datebirth|date('d-m-Y') }}<br>
                    <b> Ville: </b>{{ user.city }}<br>
                </div>


            </div>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} mt-4">
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

    </div>
    <div class="row">
        <div class="col-" id="result">

        </div>
        <div class="col-6" id="result2">

        </div>
    </div>







{% endblock %}

{% block js %}
    <script>
        $(function(){
            $('.load-message').on('click', function(e){
                e.preventDefault();
                console.log('ok');
                $.ajax({
                    type: 'get',
                    url: "{{ path('message-user')}}",
                    timeout : 3000,
                    dataType : 'html',
                    success: function(data){

                        $('#result').html(data);
                    },
                    error: function (error) {
                        console.log(error.responseText);
                    }
                })
            })
        })

        $(function(){
            $('.load-annonce').on('click', function(e){
                e.preventDefault();
                console.log('ok');
                $.ajax({
                    type: 'get',
                    url: "{{ path('annonce-user')}}",
                    timeout : 3000,
                    dataType : 'html',
                    success: function(data){

                        $('#result2').html(data);
                    },
                    error: function (error) {
                        console.log(error.responseText);
                    }
                })
            })
        })
    </script>
{% endblock %}